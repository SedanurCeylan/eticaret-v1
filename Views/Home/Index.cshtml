@model List<Urun>
@{
    ViewData["Title"] = "Anasayfa";
}
@section Bar{
    
        @await Component.InvokeAsync("Navbar")
}

    <section class="mt-3">
        <div class="container">
            <div class="card shadow">
                <div class="row gx-2 p-1 p-lg-2">
                
                <div class="col">
                     
                    @await Component.InvokeAsync("Slider")
                </div>
                </div>
            </div>
        </div>
    </section>

 <section class="mt-3">
        <div class="container">
            <h3 class="h4 mb-1 mb-lg-3">Son Eklenenler</h3>
            <div class="row row-cols-2 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-3">
                @foreach(var urun in Model)
                {
                <div class="col">
                    @await Html.PartialAsync("Partials/Site/_UrunCard", urun)
                </div>
                }
                
            </div>
        </div>

    </section>
   
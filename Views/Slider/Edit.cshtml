@model SliderEditModel
@{
    Layout = "_AdminLayout";
}

<div class="row mt-4">
    <div class="col-lg-8 mx-auto">

        <div class="card shadow-sm border-0 rounded-3 bg-white">

            <!-- HEADER -->
             <div class="card-header dashboard-card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Slider Güncelle</h5>

                <a asp-action="Index" class="btn btn-action go ">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>

            <div class="card-body">

                <form method="post" enctype="multipart/form-data">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="hidden" name="ResimAdi" value="@Model.ResimAdi" />

                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Mevcut Resim -->
                    <div class="mb-3">
                        <label class="form-label fw-semibold text-dark">Mevcut Resim</label>
                        <div class="border rounded p-2 bg-light">
                            <img src="~/img/@Model.ResimAdi" class="img-fluid rounded" />
                        </div>
                    </div>

                    <!-- Yeni Resim -->
                    <div class="mb-3">
                        <label asp-for="Resim" class="form-label fw-semibold text-dark">Yeni Resim Yükle</label>
                        <input asp-for="Resim" type="file" class="form-control" />
                        <span asp-validation-for="Resim" class="text-danger"></span>
                    </div>

                    <!-- Başlık -->
                    <div class="mb-3">
                        <label asp-for="Baslik" class="form-label fw-semibold text-dark"></label>
                        <input asp-for="Baslik" class="form-control" />
                        <span asp-validation-for="Baslik" class="text-danger"></span>
                    </div>

                    <!-- Açıklama -->
                    <div class="mb-3">
                        <label asp-for="Aciklama" class="form-label fw-semibold text-dark"></label>
                        <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                        <span asp-validation-for="Aciklama" class="text-danger"></span>
                    </div>

                    <!-- Sıra -->
                    <div class="mb-3">
                        <label asp-for="Sira" class="form-label fw-semibold text-dark"></label>
                        <input asp-for="Sira" class="form-control" />
                        <span asp-validation-for="Sira" class="text-danger"></span>
                    </div>

                    <!-- Aktif -->
                    <div class="mb-4">
                        <label asp-for="Aktif" class="form-label fw-semibold text-dark">Aktif mi?</label>
                        <div>
                            <input asp-for="Aktif" class="form-check-input me-2" />
                            <span asp-validation-for="Aktif" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Kaydet -->
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-submit">
                                <i class="fa-solid fa-check me-1"></i> Kaydet
                            </button>

                    </div>

                </form>

            </div>

        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

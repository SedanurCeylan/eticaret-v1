@model AccountLoginModel

@section Bar{
    <section class="breadcrumb-area">
        <div class="container">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item">
                    <a asp-controller="Home" asp-action="Index">Anasayfa</a>
                </li>
                <li class="breadcrumb-item active">Giriş Yap</li>
            </ol>
        </div>
    </section>
}

<section class="login-wrapper">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">

                <div class="login-card">
                    <h4 class="login-title">Giriş Yap</h4>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2"></div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control login-input">
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control login-input">
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="mb-3 d-flex align-items-center">
                            <input asp-for="BeniHatirla" class="form-check-input me-2">
                            <label asp-for="BeniHatirla" class="form-check-label"></label>
                        </div>

                        <button type="submit" class="login-btn">Giriş Yap</button>

                        <div class="text-center mt-3">
                            <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-link">
                                Şifremi Unuttum
                            </a>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </div>
</section>

@model RoleEditModel
@{
    Layout = "_AdminLayout";
}

<div class="row mt-4">
    <div class="col-lg-8 mx-auto">

        <div class="card shadow-sm rounded-3 bg-white">

            <!-- HEADER -->
            <div class="card-header dashboard-card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Role DÃ¼zenle</h5>

                <a asp-action="Index" class="btn btn-action go">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>

            <div class="card-body">

                <form method="post" asp-action="Edit">

                    <input type="hidden" name="Id" value="@Model.Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- ROLE ADI -->
                    <div class="mb-3">
                        <label asp-for="RoleAdi" class="form-label fw-semibold text-dark"></label>
                        <input asp-for="RoleAdi" class="form-control" />
                        <span asp-validation-for="RoleAdi" class="text-danger"></span>
                    </div>

                    <!-- BUTTON -->
                    <div class="d-flex justify-content-end">
                        <button type="submit" class="btn btn-submit">
                                <i class="fa-solid fa-check me-1"></i> Kaydet
                            </button>
                    </div>

                </form>

            </div>

        </div>

    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

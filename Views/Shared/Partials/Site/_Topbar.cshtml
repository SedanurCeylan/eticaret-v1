<section class="shadow-sm bg-white sticky-top">
  <div class="container py-3">
    
    <div class="row align-items-center g-3">
      
      <!-- Logo -->
      <div class="col-6 col-lg-2 order-1">
        <a href="/" class="text-decoration-none">
          <h1 class="mb-0 fs-4 fs-lg-3">
            <span class="fw-bold text-danger">Sedos</span><span class="fw-light text-dark">Ticaret</span>
          </h1>
        </a>
      </div>

      <!-- Kullanıcı Menüsü (Mobilde sağ üstte) -->
      <div class="col-6 col-lg-3 order-2 order-lg-3">
        <div class="d-flex align-items-center justify-content-end gap-3 gap-lg-4">
          @if (User.Identity?.IsAuthenticated == true)
          {
              @if (User.IsInRole("Admin"))
              {
                  <a asp-controller="Admin" asp-action="Index" target="_blank" 
                     class="text-dark text-decoration-none d-flex flex-column align-items-center" 
                     title="Admin Paneli">
                      <i class="fa-solid fa-lock fs-5 fs-lg-4 mb-0 mb-lg-1"></i>
                      <small class="d-none d-lg-block text-muted" style="font-size: 0.75rem;">Admin</small>
                  </a>
              }
              <a asp-controller="Account" asp-action="EditUser" 
                 class="text-dark text-decoration-none d-flex flex-column align-items-center">
                  <i class="fa fa-user fs-5 fs-lg-4 mb-0 mb-lg-1"></i>
                  <small class="d-none d-lg-block text-muted" style="font-size: 0.75rem;">Hesabım</small>
              </a>
              <a asp-controller="Cart" asp-action="Index" 
                 class="text-dark text-decoration-none d-flex flex-column align-items-center position-relative">
                  <i class="fa fa-shopping-cart fs-5 fs-lg-4 mb-0 mb-lg-1"></i>
                  <small class="d-none d-lg-block text-muted" style="font-size: 0.75rem;">Sepetim</small>
              </a>
              <a asp-controller="Account" asp-action="Logout" 
                 class="text-danger text-decoration-none d-flex flex-column align-items-center">
                  <i class="fa-solid fa-right-from-bracket fs-5 fs-lg-4 mb-0 mb-lg-1"></i>
                  <small class="d-none d-lg-block" style="font-size: 0.75rem;">Çıkış</small>
              </a>
          }
          else
          {
              <a asp-controller="Account" asp-action="Login" 
                 class="text-dark text-decoration-none d-flex flex-column align-items-center">
                  <i class="fa fa-user fs-5 fs-lg-4 mb-0 mb-lg-1"></i>
                  <small class="d-none d-lg-block text-muted" style="font-size: 0.75rem;">Giriş Yap</small>
              </a>
              <a asp-controller="Account" asp-action="Create" 
                 class="text-primary text-decoration-none d-flex flex-column align-items-center">
                  <i class="fa-solid fa-user-plus fs-5 fs-lg-4 mb-0 mb-lg-1"></i>
                  <small class="d-none d-lg-block" style="font-size: 0.75rem;">Kayıt Ol</small>
              </a>
              <a asp-controller="Cart" asp-action="Index" 
                 class="text-dark text-decoration-none d-flex flex-column align-items-center">
                  <i class="fa fa-shopping-cart fs-5 fs-lg-4 mb-0 mb-lg-1"></i>
                  <small class="d-none d-lg-block text-muted" style="font-size: 0.75rem;">Sepetim</small>
              </a>
          }
        </div>
      </div>

      <!-- Arama (Mobilde alt satır) -->
      <div class="col-12 col-lg-7 order-3 order-lg-2">
        <form asp-controller="Urun" asp-action="List" method="get">
          <div class="input-group">
            <input name="q" type="text" class="form-control border-2" 
                   placeholder="Ürün, kategori veya marka ara..." 
                   value="@ViewData["q"]">
            <button type="submit" class="btn btn-danger px-3 px-lg-4">
              <i class="fa fa-search"></i>
            </button>
          </div>
        </form>
      </div>

    </div>

  </div>
</section>
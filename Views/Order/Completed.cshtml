@model string

@section Bar {
    <section class="custom-breadcrumb py-3">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 align-items-center">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="Index" class="breadcrumb-link fw-medium">
                            <i class="fa-solid fa-house me-1"></i> Anasayfa
                        </a>
                    </li>

                    <li class="breadcrumb-item active fw-semibold" aria-current="page">
                        Sipariş Tamamlandı
                    </li>
                </ol>
            </nav>
        </div>
    </section>
}

<div class="container my-5">
    <div class="card shadow-sm border-0 mx-auto" style="max-width: 600px; border-radius: 16px;">

        <div class="card-body text-center py-5">

            <!-- Başarılı ikon -->
            <div class="mb-4">
                <div class="d-inline-flex align-items-center justify-content-center"
                     style="width:80px; height:80px; border-radius:50%; background:#e8ffe8;">
                    <i class="fa-solid fa-check fa-3x" style="color:#2cbf2c;"></i>
                </div>
            </div>

            <h2 class="fw-semibold mb-3" style="color:#333;">Siparişiniz Alındı!</h2>

            <p class="text-muted mb-1">
                <strong>#@Model</strong> numaralı siparişiniz başarıyla oluşturuldu.
            </p>

            <p class="text-muted mb-4">
                Sipariş detaylarınızı “Siparişlerim” bölümünden takip edebilirsiniz.
            </p>
           <div class="d-flex align-items-center justify-content-center gap-3 mt-4">

    <a asp-controller="Order" 
       asp-action="OrderList"
       class="btn btn-submit px-4 py-2 d-inline-flex align-items-center gap-2">
        <i class="fa-solid fa-box-archive"></i> Siparişleri Görüntüle
    </a>

    <a asp-controller="Home"
       asp-action="Index"
       class="btn btn-light text-decoration-none px-4 py-2 d-inline-flex align-items-center gap-2">
        <i class="fa-solid fa-house"></i> Anasayfaya Dön
    </a>

</div>

        </div>

    </div>
</div>

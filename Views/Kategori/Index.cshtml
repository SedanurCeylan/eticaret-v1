@model List<KategoriGetModel>
@{
    Layout = "_AdminLayout";
}

<div class="row mt-3">
    <div class="col">
        <div class="card shadow-sm dashboard-card rounded-3">

            <div class="card-header dashboard-card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0 ">Kategoriler</h5>

                <a asp-controller="Kategori" asp-action="Create" class="btn btn-action add">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>
            

            <div class="card-body">
                <div class="table-responsive">
                    <table class="table dashboard-table align-middle mb-0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Kategori Adı</th>
                                <th>Url</th>
                                <th>Ürün Sayısı</th>
                                <th class="text-end">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var kat in Model)
                            {
                                <tr>
                                    <td>@kat.Id</td>
                                    <td>@kat.KategoriAdi</td>
                                    <td>@kat.Url</td>
                                    <td>@kat.UrunSayisi</td>

                                    <td class="text-end">

                                        <a asp-controller="Kategori" asp-action="Edit" 
                                           asp-route-id="@kat.Id"
                                           class="btn btn-action edit">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>

                                        <a asp-controller="Urun"
                                           asp-action="Index"
                                           asp-route-kategori="@kat.Id"
                                           class="btn btn-action go">
                                            <i class="fa-solid fa-arrow-right"></i>
                                        </a>

                                        <a asp-controller="Kategori" asp-action="Delete"
                                           asp-route-id="@kat.Id"
                                           class="btn btn-action delete @(kat.UrunSayisi == 0 ? "" : "disabled")">
                                            <i class="fa-solid fa-trash"></i>
                                        </a>

                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

@model KategoriEditModel
@{
    Layout = "_AdminLayout";
}

<div class="row mt-3">
    <div class="col-md-8 mx-auto">
        <div class="card shadow-sm dashboard-card rounded-3">

            <div class="card-header dashboard-card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Kategori Güncelle</h5>

                <a asp-controller="Kategori" asp-action="Index" class="btn btn-action go">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>

            <div class="card-body">

                <form method="post">

                    <input type="hidden" name="Id" value="@Model.Id">

                    <!-- Kategori Adı -->
                    <div class="form-group mb-3">
                        <label asp-for="KategoriAdi" class="form-label fw-medium"></label>
                        <input asp-for="KategoriAdi" class="form-control soft-input">
                        <span asp-validation-for="KategoriAdi" class="text-danger small"></span>
                    </div>

                    <!-- URL -->
                    <div class="form-group mb-4">
                        <label asp-for="Url" class="form-label fw-medium"></label>
                        <input asp-for="Url" class="form-control soft-input">
                        <span asp-validation-for="Url" class="text-danger small"></span>
                    </div>

                    <!-- KAYDET -->
                    <div class="text-end">
                        <button type="submit" class="btn btn-submit">
                            <i class="fa-solid fa-check me-1"></i> Kaydet
                        </button>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

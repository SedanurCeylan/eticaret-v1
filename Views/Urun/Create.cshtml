@model UrunCreateModel
@{
    Layout = "_AdminLayout";
}

<div class="row mt-3">
    <div class="col-md-10 mx-auto">
        <div class="card shadow-sm dashboard-card rounded-3">
            <div class="card-header dashboard-card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Ürün Ekle</h5>
                <a asp-controller="Urun" asp-action="Index" class="btn btn-action go">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>

            <div class="card-body">
                @* foto upload için *@
                <form method="post" enctype="multipart/form-data">
                    <div class="row mb-3">
                        <label asp-for="UrunAdi" class="col-sm-2 col-form-label fw-medium"></label>
                        <div class="col-sm-10">
                            <input asp-for="UrunAdi" class="form-control form-control-soft" />
                            <span asp-validation-for="UrunAdi" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label fw-medium"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control form-control-soft"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Fiyat" class="col-sm-2 col-form-label fw-medium"></label>
                        <div class="col-sm-10">
                            <input asp-for="Fiyat" class="form-control form-control-soft" />
                            <span asp-validation-for="Fiyat" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label fw-medium"></label>
                        <div class="col-sm-10 d-flex gap-4">
                            <div class="form-check">
                                <input asp-for="Aktif" class="form-check-input" />
                                <label asp-for="Aktif" class="form-check-label"></label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Anasayfa" class="form-check-input" />
                                <label asp-for="Anasayfa" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Resim" class="col-sm-2 col-form-label fw-medium"></label>
                        <div class="col-sm-10">
                            <input asp-for="Resim" type="file" class="form-control form-control-soft" />
                            <span asp-validation-for="Resim" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <label asp-for="KategoriId" class="col-sm-2 col-form-label fw-medium"></label>
                        <div class="col-sm-10">
                            <select asp-for="KategoriId" class="form-select form-control-soft">
                                <option value="">Seçiniz...</option>
                                @foreach (var kategori in (List<Kategori>)ViewData["Kategoriler"]!)
                                {
                                    <option value="@kategori.Id">@kategori.KategoriAdi</option>
                                }
                            </select>
                            <span asp-validation-for="KategoriId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row mb-0">
                        <div class="col-sm-10 offset-sm-2">
                            <button type="submit" class="btn btn-add px-4">
                                Kaydet
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@model List<UrunGetModel>
@{
    Layout = "_AdminLayout";
}

<div class="row mt-3">
    <div class="col">
        <div class="card shadow-sm dashboard-card rounded-3">

            <div class="card-header dashboard-card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Ürünler</h5>

                <a asp-controller="Urun" asp-action="Create" class="btn btn-action add">
                    <i class="fa-solid fa-plus"></i>
                </a>
            </div>

            <div class="card-body">

                <!-- Filtre -->
                    <form method="get" class="products-filter mb-3">

                        <div class="input-group">

                            <select name="kategori" class="form-select form-select-soft">
                                <option value="">Hepsi</option>
                                @foreach (var kategori in (List<Kategori>)ViewData["Kategoriler"]!)
                                {
                                    <option value="@kategori.Id"
                                        selected="@(ViewBag.SeciliKategori == kategori.Id ? "selected" : null)">
                                        @kategori.KategoriAdi
                                    </option>
                                }
                            </select>

                            <button type="submit"
                                class="btn btn-secondary d-flex align-items-center justify-content-center">
                                <i class="fa-solid fa-magnifying-glass"></i>
                            </button>

                        </div>

                    </form>



                @if (!Model.Any())
                {
                    <p class="text-danger mb-3">Ürün Bulunamadı</p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table dashboard-table align-middle mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 30px;">Id</th>
                                    <th style="width: 80px;">Resim</th>
                                    <th>Ürün Adı</th>
                                    <th>Fiyat</th>
                                    <th>Aktif</th>
                                    <th>Anasayfa</th>
                                    <th>Kategori</th>
                                    <th class="text-end" style="width: 120px;">İşlemler</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var urun in Model)
                                {
                                    <tr>
                                        <td>@urun.Id</td>

                                        <td>
                                            <img src="img/@urun.Resim" class="product-thumb" alt="@urun.UrunAdi">
                                        </td>

                                        <td>@urun.UrunAdi</td>
                                        
                                        <td>@urun.Fiyat.ToString("N2") ₺</td>

                                        <td>
                                            <span class="status-badge @(urun.Aktif ? "yes" : "no")">
                                                @(urun.Aktif ? "Aktif" : "Pasif")
                                            </span>
                                        </td>

                                        <td>
                                            <span class="status-badge @(urun.Anasayfa ? "yes" : "no")">
                                                @(urun.Anasayfa ? "Evet" : "Hayır")
                                            </span>
                                        </td>

                                        <td>@urun.KategoriAdi</td>

                                        <td class="text-end">

                                            <a asp-controller="Urun" asp-action="Edit" asp-route-id="@urun.Id"
                                                class="btn btn-action edit">
                                                <i class="fa-solid fa-pen"></i>
                                            </a>

                                            <a asp-controller="Urun" asp-action="Delete" asp-route-id="@urun.Id"
                                                class="btn btn-action delete">
                                                <i class="fa-solid fa-trash"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
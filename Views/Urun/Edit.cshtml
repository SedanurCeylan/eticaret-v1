@model UrunEditModel
@{
    Layout = "_AdminLayout";
}
<form method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-9">
            <div class="card shadow">
                 <div class="card-header dashboard-card-header d-flex justify-content-between align-items-center">
                <h5 class="card-title mb-0">Ürün Güncelle</h5>

                <a asp-action="Index" class="btn btn-action go">
                    <i class="fa-solid fa-list"></i>
                </a>
            </div>
                <div class="card-body">

                    <input type="hidden" name="Id" value="@Model.Id">
                    <input type="hidden" name="ResimAdi" value="@Model.ResimAdi">

                    <div class="row mb-3">
                        <label asp-for="UrunAdi" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="UrunAdi" class="form-control">
                            <span asp-validation-for="UrunAdi" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aciklama" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
                            <span asp-validation-for="Aciklama" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="row mb-3">
                        <label asp-for="Fiyat" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Fiyat" class="form-control">
                            <span asp-validation-for="Fiyat" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Aktif" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Aktif" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="Anasayfa" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input asp-for="Anasayfa" class="form-check-input">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label asp-for="KategoriId" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            @{
                                var kategoriler = ViewData["Kategoriler"] as List<Kategori> ?? new List<Kategori>();
                            }
                            <select asp-for="KategoriId" class="form-select">
                                <option value="">Seçiniz...</option>
                                @foreach (var kategori in kategoriler)
                                {
                                    <option value="@kategori.Id" selected="@(kategori.Id == Model?.KategoriId)">
                                        @kategori.KategoriAdi
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="KategoriId" class="text-danger"></span>

                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="text-end">
                            <button type="submit" class="btn btn-submit">
                                <i class="fa-solid fa-check me-1"></i> Kaydet
                            </button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow">
                <div class="card-body">
                    <img src="~/img/@Model.ResimAdi" class="img-thumbnail" alt="">
                    <input asp-for="Resim" class="form-control mt-3">
                    <span asp-validation-for="Resim" class="text-danger"></span>

                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}